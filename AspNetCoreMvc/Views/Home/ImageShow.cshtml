@model IEnumerable<string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "ImageShow";
}

<h1>Resimler</h1>

<div class="m-2">
    @foreach (var item in Model)
    {
        <img src="/images/@item" style="width:100px; height:100px; border:1px;" class="mb-2" />
        <p>@item</p>

        <form asp-action="ImageShow" method="post">
            <input type="submit" asp-route-name="@item" value="Resim sil" />
        </form>

    }

</div>
